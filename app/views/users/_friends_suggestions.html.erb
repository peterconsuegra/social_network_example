<% friends_suggestions.each do |friend| %>

	<div id="suggestion_<%=friend.id%>">
	
	     <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
	         <div class="d-flex align-items-center hover-pointer">
	             <a href="/<%=friend.username%>"><img  style="margin-right:10px" class="img-xs rounded-circle" src="<%=get_avatar(friend.profile_pic_id)%>" alt=""></a>
	             <div class="ml-2">
	                 
	                 <p class="tx-11 text-muted"><a href="/<%=friend.username%>"><%=friend.name%> <%=friend.last_name%></a></p>
	             </div>
	         </div>
	         <button class="btn btn-icon">
	             <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-plus add_friend" target_id="<%=friend.id%>" data-toggle="tooltip" title="" data-original-title="Connect">
	                 <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
	                 <circle cx="8.5" cy="7" r="4"></circle>
	                 <line x1="20" y1="8" x2="20" y2="14"></line>
	                 <line x1="23" y1="11" x2="17" y2="11"></line>
	             </svg>
	         </button>
	     </div>
	
	</div>

<%end%>